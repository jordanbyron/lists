%tr.nested-fields
  - if f.object.new_record?
    %td= f.text_field :name
    %td= f.text_field :email
  - else
    %td= f.object.name
    %td= f.object.email
  %td.controls
    - if f.object.persisted?
      = link_to "Resend Invite", resend_invite_path(f.object),
        class: 'btn resend-invite', data: { method: :post, remote: true }
    = link_to_remove_association "remove", f
