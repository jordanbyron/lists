        \- Lists


    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag

    = yield(:header_bottom)

  %body
    = render :partial => "shared/current_user", :locals => {:current_user => current_user}
    = yield